<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<VBox fx:id="playerBar"
      styleClass="player-bar"
      stylesheets="@../css/player_bar.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.new_better.controllers.PlayerBarController">

    <Slider fx:id="progressSlider"
            styleClass="ios-progress-slider"
            prefHeight="4"
            minWidth="200" />

    <HBox alignment="CENTER" prefHeight="85">
        <padding>
            <Insets left="25" right="25" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="15" prefWidth="300" HBox.hgrow="SOMETIMES">
            <VBox alignment="CENTER_LEFT" spacing="2">
                <Label fx:id="songTitleLabel" styleClass="song-name-label" text="No song playing" />
                <Label fx:id="songGenreLabel" styleClass="artist-name-label" text="Artist Name" />
            </VBox>
        </HBox>

        <HBox alignment="CENTER" spacing="25" HBox.hgrow="ALWAYS">

            <Button fx:id="shuffleBtn" onAction="#handleShuffle" styleClass="player-btn">
                <graphic>
                    <SVGPath content="M10.59 9.17L5.41 4 4 5.41l5.17 5.17 1.42-1.41zM14.5 4l2.04 2.04L4 18.59 5.41 20 17.96 7.46 20 9.5V4h-5.5zm.33 9.41l-1.41 1.41 3.13 3.13L14.5 20H20v-5.5l-2.04 2.04-3.13-3.13z"
                             fill="white" scaleX="1.2" scaleY="1.2"/>
                </graphic>
            </Button>

            <Button onAction="#handlePrevious" styleClass="player-btn">
                <graphic>
                    <SVGPath content="M6 6h2v12H6zm3.5 6l8.5 6V6z"
                             fill="white" scaleX="1.2" scaleY="1.2"/>
                </graphic>
            </Button>

            <Button fx:id="playPauseBtn" onAction="#handlePlayPause" styleClass="play-btn-circle">
                <graphic>
                    <SVGPath fx:id="playPauseIcon"
                             content="M8 5v14l11-7z"
                             fill="black" scaleX="1.5" scaleY="1.5"/>
                </graphic>
            </Button>

            <Button onAction="#handleNext" styleClass="player-btn">
                <graphic>
                    <SVGPath content="M6 18l8.5-6L6 6zm9-12v12h2V6z"
                             fill="white" scaleX="1.2" scaleY="1.2"/>
                </graphic>
            </Button>

            <Button fx:id="repeatBtn" onAction="#handleRepeat" styleClass="player-btn">
                <graphic>
                    <SVGPath content="M7 7h10v3l4-4-4-4v3H5v6h2V7zm10 10H7v-3l-4 4 4 4v-3h12v-6h-2v4z"
                             fill="white" scaleX="1.2" scaleY="1.2"/>
                </graphic>
            </Button>

        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="20" prefWidth="450" HBox.hgrow="SOMETIMES">

            <Label fx:id="timeLabel"
                   text="00:00 / 00:00"
                   style="-fx-text-fill: #b3b3b3; -fx-font-size: 12px; -fx-font-weight: bold;"
                   minWidth="90"
                   alignment="CENTER" />

            <Button fx:id="likeBtn" onAction="#handleLike" styleClass="player-btn">
                <graphic>
                    <SVGPath content="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
                             fill="white" scaleX="1.2" scaleY="1.2"/>
                </graphic>
            </Button>

            <HBox alignment="CENTER" spacing="10" styleClass="volume-container">
                <Button styleClass="player-btn">
                    <graphic>
                        <SVGPath content="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"
                                 fill="white"/>
                    </graphic>
                </Button>
                <Slider fx:id="volumeSlider" prefWidth="100" styleClass="ios-volume-slider" />
            </HBox>

            <Button fx:id="queueBtn" onAction="#handleToggleQueue" styleClass="player-btn">
                <graphic>
                    <SVGPath content="M15 6H3v2h12V6zm0 4H3v2h12v-2zM3 16h8v-2H3v2zM17 6v8.18c-.31-.11-.65-.18-1-.18-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3V8h3V6h-5z"
                             fill="white" scaleX="1.2" scaleY="1.2"/>
                </graphic>
            </Button>
        </HBox>
    </HBox>

    <VBox fx:id="queuePanelContainer" visible="false" managed="false" />

</VBox>