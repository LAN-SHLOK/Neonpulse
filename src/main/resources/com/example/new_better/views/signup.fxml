<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.new_better.controllers.SignupController"
           styleClass="auth-root">

    <VBox alignment="CENTER"
          spacing="15"
          styleClass="auth-container"
          maxWidth="450"
          maxHeight="650">

        <Text text="NeonPulse" styleClass="app-title"/>
        <Text text="Create your account" styleClass="auth-subtitle"/>

        <VBox spacing="15" alignment="CENTER" styleClass="auth-form">

            <StackPane>
                <ImageView fx:id="profileImageView"
                           fitWidth="90"
                           fitHeight="90"
                           preserveRatio="true"
                           styleClass="profile-preview"/>
            </StackPane>

            <Button text="Select Profile Picture"
                    onAction="#handleSelectImage"
                    styleClass="auth-link-button"/>

            <TextField fx:id="usernameField"
                       promptText="Username"
                       styleClass="auth-field"/>

            <TextField fx:id="emailField"
                       promptText="Email"
                       styleClass="auth-field"/>

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           styleClass="auth-field"/>

            <PasswordField fx:id="confirmPasswordField"
                           promptText="Confirm Password"
                           styleClass="auth-field"/>

            <Label fx:id="errorLabel" styleClass="error-label"/>

            <Button text="Sign Up"
                    onAction="#handleSignup"
                    styleClass="auth-button"
                    prefWidth="200"/>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Already have an account?" textFill="#888888"/>
                <Button text="Login"
                        onAction="#handleGoToLogin"
                        styleClass="auth-link-button"/>
            </HBox>

        </VBox>
    </VBox>

    <HBox StackPane.alignment="TOP_RIGHT" pickOnBounds="false" maxWidth="-Infinity" maxHeight="-Infinity">
        <padding><Insets top="20" right="20"/></padding>
        <HBox spacing="10" alignment="CENTER">
            <Button text="—" onAction="#handleMinimize" styleClass="window-btn, minimize-btn"/>
            <Button text="✕" onAction="#handleExit" styleClass="window-btn, close-btn"/>
        </HBox>
    </HBox>

</StackPane>