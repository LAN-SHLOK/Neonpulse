<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" styleClass="ios-dialog"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1">

    <Label styleClass="ios-header" text="New Playlist" />

    <TextField fx:id="playlistNameInput" promptText="Playlist Name"
               styleClass="ios-text-field" />

    <HBox alignment="CENTER" spacing="40">
        <Button fx:id="cancelBtn" styleClass="ios-dialog-btn" text="Cancel" />
        <Button fx:id="createBtn" styleClass="ios-dialog-btn-bold" text="OK" />
    </HBox>
</VBox>